{{#partial "content"}}
    <div style="" class="p-5 mb-5">
        <div class="container pt-10 pb-12 pt-md-14 pb-md-16">
            <div class="row">
                <div class="col-lg-8 mx-auto">

                    <!-- /nav -->
                </div>
                <!-- /column -->
            </div>
            <!-- /.row -->
        </div>
    </div>
    <div class="container">
    <div class="views sightings">
        <h1>Sightings</h1>
        <hr>

        <div class="row">

            {{#if sightings}}
                <div class="col-md-3">
                    <p>Time</p>
                    <hr>
                    {{#each sightings as |s|}}
                        <p>{{s.time}}</p>
                    {{/each}}
                </div>
                <div class="col-md-3">
                    <p>Animal</p>
                    <hr>
                    {{#each animals as |a|}}
                        <p>{{a}}</p>
                    {{/each}}

                </div>

            {{else}}
                <p>No sightings!! Create some <a href="/create/sighting">here</a> </p>

            {{/if}}

        </div>
    </div>
    </div>
{{/partial}}
{{> layout.hbs}}