{{#partial "content"}}
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
        {{#if animals}}
            {{#each animals as |a|}}
                <div class="card mb-4 m-3 box-shadow">
                        <img class="card-img-top"  alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;"
                             src="/images/ani.jpg" data-holder-rendered="true">
                        <div class="card-body">
                            <p class="card-text">
                        <p class="card-text"><b>{{a.name}}</b></p>
                        <p class="card-text">{{a.type}}</p>
                        <p class="card-text">{{a.health}}</p>
                        <p class="card-text">{{a.age}}</p>

                    </div>
                </div>
            {{/each}}
        {{else}}
            <h2>No animals! Create some animals <a href="/create/animal">here</a></h2>
        {{/if}}

            </div>
    </div>
    </div>
{{/partial}}
{{> layout.hbs}}